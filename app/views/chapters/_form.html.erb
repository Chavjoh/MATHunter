<%= form_for [@tutorial, @chapter] do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content, :class => 'ckeditor' %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
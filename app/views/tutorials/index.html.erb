<div class="top-right">
	<%= link_to image_tag('/images/icons/add.png') + 'New tutorial', new_tutorial_path, { :class => "actionlink" } %>
</div>

<h1>Tutorials list</h1>

<%= render :partial => 'search' %>

<% @tutorials.each do |tutorial| %>
	<div class="highlight">
		
		<div class="image">
			<% if not tutorial.image.blank? %>
			<%= image_tag(root_url + tutorial.image) %>
			<% else %>
			&nbsp;
			<% end %>
		</div>
		<%= link_to tutorial.title, tutorial_path(tutorial) %>
	</div>
<% end %>

<% if not params[:search] %>
	<%= will_paginate @tutorials %>
<% end %>

<%= form_for @tutorial do |f| %>

	<table id="tutorial_form" border="0" cellspacing="0" cellpadding="0">
		<tr>
			<td class="information">
				<div class="field">
					<%= f.label :title %><br />
					<%= f.text_field :title %>
				</div>
				
				<div class="field">
					<%= f.label :image %><br />
					<%= f.text_field :image %>
				</div>
				
				<div class="field">
					<%= f.label :difficulty %><br />
					<%= f.select :difficulty, [["Easy", "1"], ["Medium", "2"], ["Hardcore", "3"]] %>
				</div>
			</td>
			<td class="description">
				<div class="field">
					<%= f.label :description %><br />
					<%= f.text_area :description %>
				</div>
			</td>
		</tr>
	</table>
		
	<div class="actions text-right">
		<%= f.submit %>
	</div>
	
<% end %>